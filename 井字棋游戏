 #define _CRT_SECURE_NO_WARNINGS 1
#include "game.h"

void menu()
{
	printf("*********井字棋********\n");
	printf("****1.play   0.exit****\n");
	printf("***********************\n");
}
void game()
{
	char ret;
	char board[ROW][COL] = {0};
	Initboard(board,ROW,COL);//初始化棋盘
	Displayboard(board, ROW, COL);//打印棋盘
	while (1)
	{
		PlayerMove(board,ROW,COL);//玩家下棋
		Displayboard(board, ROW, COL);
		ret = Is_Winner(board, ROW, COL);//判断输赢
		if (ret != 'C')
		{
			break;
		}
		ComputerMove(board, ROW, COL);//电脑下棋
		Displayboard(board, ROW, COL);
		ret = Is_Winner(board, ROW, COL);
		if (ret != 'C')
		{
			break;
		}
	}//下棋
	if (ret == '*')
	{
		printf("玩家赢\n");
	}
	else if (ret == '#')
	{
		printf("电脑赢\n");
	}
	else if (ret == 'Q')
	{
		printf("平局\n");
	}
}
void test()
{
	int input = 0;
	srand((unsigned int)time(NULL));
	do
	{
		menu();
		printf("请选择：");
		scanf("%d", &input);
		switch (input)
		{
		case 1:
			game();
			break;
		case 0:
			printf("退出游戏\n");
			break;
		default:
			printf("输入错误，请重新输入：\n");
		}
	}while (input!=1);


}
int main()
{
	test();
	return 0;
}
